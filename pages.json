{
	"easycom": {
		"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		// 默认配置界面
		{
			"path": "pages/login/index",
			"style": {
				"navigationBarTitleText": "登录"
			}
		},
		{
			"path": "pages/login/register/index",
			"style": {
				"navigationBarTitleText": "注册",
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页"
			}
		},
		{
			"path": "pages/issue/index",
			"style": {
				"navigationBarTitleText": "发布"
			}
		},
		{
			"path": "pages/profile/index",
			"style": {
				"navigationBarTitleText": "我的",
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/profile/updatePhone",
			"style": {
				"navigationBarTitleText": "修改手机",
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/profile/updateEmail",
			"style": {
				"navigationBarTitleText": "修改邮箱",
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/profile/updateUserName",
			"style": {
				"navigationBarTitleText": "修改姓名",
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/home/home",
			"style": {
				"navigationBarTitleText": "个人中心",
				"enablePullDownRefresh": false
			}
		}
	],
	"tabBar": {
		"borderStyle": "white",
		"color": "#333333",
		"selectedColor": "#27c7db",
		"backgroundColor": "#222222",
		"fontSize": "16px",
		"list": [
			{
				"pagePath": "pages/index/index",
				"iconPath": "static/images/tabbar/home.png",
				"selectedIconPath": "static/images/tabbar/home_active.png",
				"text": "首页"
			},
			{
				"pagePath": "pages/issue/index",
				"iconPath": "static/images/tabbar/issue.png",
				"selectedIconPath": "static/images/tabbar/issue_active.png",
				"text": "发布"
			},
			{
				"pagePath": "pages/profile/index",
				"iconPath": "static/images/tabbar/profile.png",
				"selectedIconPath": "static/images/tabbar/profile_active.png",
				"text": "我的"
			}
		]
	},
	"globalStyle": {
		"navigationBarTextStyle": "white",
		"navigationBarTitleText": "校园跑腿",
		"navigationBarBackgroundColor": "#0081ff",
		"backgroundColor": "#F8F8F8"
	},
	"uniIdRouter": {}
}